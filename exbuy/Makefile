help: ## ë„ì›€ë§ í‘œì‹œ
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

# ğŸ—ï¸ í™˜ê²½ êµ¬ì„±
build: ## Docker ì´ë¯¸ì§€ ë¹Œë“œ
	docker compose build

rebuild: ## Docker ì´ë¯¸ì§€ ì™„ì „ ì¬ë¹Œë“œ (ìºì‹œ ë¬´ì‹œ)
	@echo "ì´ë¯¸ì§€ë¥¼ ì²˜ìŒë¶€í„° ë‹¤ì‹œ ë¹Œë“œí•©ë‹ˆë‹¤..."
	@./rebuild.sh || (echo "rebuild.sh ì‹¤í–‰ ì‹¤íŒ¨" && exit 1)
	@echo "âœ“ ì¬ë¹Œë“œ ì™„ë£Œ"

up: ## ì„œë¹„ìŠ¤ ì‹œì‘ (ê¸°ë³¸: dbë§Œ)
	docker compose up -d db
	@echo "âœ“ DB ì‹œì‘ë¨"

up-sync: ## Gunicorn sync ì„œë²„ ì‹œì‘
	WORKERS=$(WORKERS) docker compose --profile gunicorn-sync up -d
	@echo "âœ“ Gunicorn sync ì‹œì‘ (WORKERS=$(WORKERS))"

up-gevent: ## Gunicorn gevent ì„œë²„ ì‹œì‘
	WORKERS=$(WORKERS) docker compose --profile gunicorn-gevent up -d
	@echo "âœ“ Gunicorn gevent ì‹œì‘ (WORKERS=$(WORKERS))"

up-gthread: ## Gunicorn gthread ì„œë²„ ì‹œì‘
	WORKERS=$(WORKERS) docker compose --profile gunicorn-gthread up -d
	@echo "âœ“ Gunicorn gthread ì‹œì‘ (WORKERS=$(WORKERS))"

up-uvicorn: ## Uvicorn ì„œë²„ ì‹œì‘
	WORKERS=$(WORKERS) docker compose --profile uvicorn up -d
	@echo "âœ“ Uvicorn ì‹œì‘ (WORKERS=$(WORKERS))"

up-all: ## ëª¨ë“  ì„œë²„ ì‹œì‘
	WORKERS=$(WORKERS) docker compose --profile gunicorn-sync --profile gunicorn-gevent --profile gunicorn-gthread --profile uvicorn up -d
	@echo "âœ“ ëª¨ë“  ì„œë²„ ì‹œì‘ (WORKERS=$(WORKERS))"

down: ## ëª¨ë“  ì„œë¹„ìŠ¤ ì¢…ë£Œ
	docker compose down

down-sync: ## Gunicorn sync ì„œë²„ë§Œ ì¢…ë£Œ
	docker compose stop exbuy-gunicorn-sync
	docker compose rm -f exbuy-gunicorn-sync
	@echo "âœ“ Gunicorn sync ì¢…ë£Œ"

down-gevent: ## Gunicorn gevent ì„œë²„ë§Œ ì¢…ë£Œ
	docker compose stop exbuy-gunicorn-gevent
	docker compose rm -f exbuy-gunicorn-gevent
	@echo "âœ“ Gunicorn gevent ì¢…ë£Œ"

down-gthread: ## Gunicorn gthread ì„œë²„ë§Œ ì¢…ë£Œ
	docker compose stop exbuy-gunicorn-gthread
	docker compose rm -f exbuy-gunicorn-gthread
	@echo "âœ“ Gunicorn gthread ì¢…ë£Œ"

down-uvicorn: ## Uvicorn ì„œë²„ë§Œ ì¢…ë£Œ
	docker compose stop exbuy-uvicorn
	docker compose rm -f exbuy-uvicorn
	@echo "âœ“ Uvicorn ì¢…ë£Œ"

down-all-servers: ## ëª¨ë“  ì•± ì„œë²„ ì¢…ë£Œ (DBëŠ” ìœ ì§€)
	@make down-sync || true
	@make down-gevent || true
	@make down-gthread || true
	@make down-uvicorn || true
	@echo "âœ“ ëª¨ë“  ì„œë²„ ì¢…ë£Œ (DBëŠ” ì‹¤í–‰ ì¤‘)"

restart-sync: ## Gunicorn sync ì¬ì‹œì‘
	@make down-sync
	@make up-sync WORKERS=$(WORKERS)

restart-gevent: ## Gunicorn gevent ì¬ì‹œì‘
	@make down-gevent
	@make up-gevent WORKERS=$(WORKERS)

restart-gthread: ## Gunicorn gthread ì¬ì‹œì‘
	@make down-gthread
	@make up-gthread WORKERS=$(WORKERS)

restart-uvicorn: ## Uvicorn ì¬ì‹œì‘
	@make down-uvicorn
	@make up-uvicorn WORKERS=$(WORKERS)

switch: ## ì„œë²„ ì „í™˜ (ì˜ˆ: make switch TO=gevent WORKERS=8)
	@if [ -z "$(TO)" ]; then \
		echo "ì‚¬ìš©ë²•: make switch TO=<sync|gevent|gthread|uvicorn> [WORKERS=N]"; \
		exit 1; \
	fi
	@echo "ì„œë²„ë¥¼ $(TO)ë¡œ ì „í™˜í•©ë‹ˆë‹¤ (WORKERS=$(WORKERS))..."
	@make down-all-servers
	@sleep 2
	@make up-$(TO) WORKERS=$(WORKERS)
	@echo "âœ“ $(TO) ì„œë²„ë¡œ ì „í™˜ ì™„ë£Œ"

status: ## ì‹¤í–‰ ì¤‘ì¸ ì„œë²„ ìƒíƒœ í™•ì¸
	@echo "=== Docker ì»¨í…Œì´ë„ˆ ìƒíƒœ ==="
	@docker compose ps
	@echo ""
	@echo "=== ì„œë²„ í—¬ìŠ¤ì²´í¬ ==="
	@make check-health

ps-running: ## ì‹¤í–‰ ì¤‘ì¸ ì•± ì„œë²„ ëª©ë¡
	@docker ps --filter "name=exbuy-" --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"

