test-read-only: ## ìˆœìˆ˜ ì½ê¸° ì „ìš© í…ŒìŠ¤íŠ¸
	@echo "ğŸ’¡ VU/DURATION ë³€ê²½: make test-read-only SERVER=<server> PORT_9000=<url> MAX_VU=<number> DURATION=<time>"
	@echo "=== í…ŒìŠ¤íŠ¸ ì‹œì‘ ==="
	@echo "ì„œë²„ íƒ€ì…: $(SERVER)"
	@echo "ì‹œë‚˜ë¦¬ì˜¤: read-only"
	@echo "VU ì„¤ì •: $(MAX_VU)"
	@echo "ì§€ì† ì‹œê°„: $(DURATION)"
	@echo "==================================="
	@echo "ë§¤ë¶„ 30ì´ˆì— ì‹œì‘í•˜ë„ë¡ ëŒ€ê¸° ì¤‘..."
	@current=$$(date +%s); \
	seconds=$$((current % 60)); \
	if [ $$seconds -lt 30 ]; then \
		sleep $$((30 - seconds)); \
	else \
		sleep $$((90 - seconds)); \
	fi
	@START_TIME=$$(date '+%Y-%m-%d %H:%M:%S'); \
	echo "ì‹¤ì œ ì‹œì‘: $$START_TIME"
	@mkdir -p $(RESULTS_DIR) $(LOGS_DIR)
	@$(MAKE) _log-test-start SCENARIO=read-only
	@K6_PROMETHEUS_RW_SERVER_URL=http://localhost:8428/api/v1/write \
	BASE_URL=$(PORT_9000) \
	MAX_VU=$(MAX_VU) \
	DURATION=$(DURATION) \
	RAMP_UP=$(RAMP_UP) \
	SERVER_TYPE=$(SERVER) \
	k6 run \
		--tag server_type=$(SERVER) \
		--tag scenario=read-only \
		--out json=$(RESULTS_DIR)/$(SERVER)-read-only.json \
		--out experimental-prometheus-rw \
		--log-output=file=$(LOGS_DIR)/$(SERVER)-read-only.log \
		k6-scripts/read-only.js
	@$(MAKE) _log-test-end SCENARIO=read-only
	@END_TIME=$$(date '+%Y-%m-%d %H:%M:%S'); \
	echo "==================================="; \
	echo "=== í…ŒìŠ¤íŠ¸ ì™„ë£Œ ==="; \
	echo "ì„œë²„ íƒ€ì…: $(SERVER)"; \
	echo "ì‹œë‚˜ë¦¬ì˜¤: read-only"; \
	echo "ì¢…ë£Œ ì‹œê°„: $$END_TIME"; \
	echo "==================================="

