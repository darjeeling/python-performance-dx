# ê¸°ë³¸ ì„¤ì •
SERVER ?= gunicorn-sync
WORKERS ?= 4
MAX_VU ?= 200
DURATION ?= 5m
RAMP_UP ?= 30s
RAMP_DOWN ?= 30s

PORT_9000 = http://localhost:9000
PORT_9001 = http://localhost:9001
PORT_9002 = http://localhost:9002
PORT_9003 = http://localhost:9003

# í…ŒìŠ¤íŠ¸ ê²°ê³¼ ë””ë ‰í† ë¦¬
RESULTS_DIR = results
